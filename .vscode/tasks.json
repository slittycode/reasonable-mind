{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/trainer/Dockerfile",
				"context": "${workspaceFolder}/trainer",
				"pull": true
			},
			"node": {
				"package": "${workspaceFolder}/trainer/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/trainer/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				}
			},
			"node": {
				"package": "${workspaceFolder}/trainer/package.json",
				"enableDebugging": true
			}
		},
		{
			"type": "shell",
			"label": "pytest: run all tests",
			"command": "python3",
			"args": [
				"-m",
				"pytest",
				"agents/tests/",
				"-v",
				"--cov=agents.governance",
				"--cov=agents.core_logic",
				"--cov-report=xml",
				"--cov-report=term-missing",
				"--cov-fail-under=45"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": ["$python"]
		},
		{
			"type": "shell",
			"label": "pytest: run with coverage",
			"command": "python3",
			"args": [
				"-m",
				"pytest",
				"agents/tests/",
				"-v",
				"--cov=agents.governance",
				"--cov=agents.core_logic",
				"--cov-report=html",
				"--cov-report=xml",
				"--cov-report=term-missing",
				"--cov-fail-under=45"
			],
			"group": "test",
			"problemMatcher": ["$python"]
		}
	]
}
